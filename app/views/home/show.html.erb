
<div class = "kakikomi_z">
<% @posts.each do |post| %>
<div class = "kakikomi_txt">
  <p>
<%= post.name %> : <%= post.body %>
  <p><%= link_to '削除', post_delete_path(post.id), method: :delete, data: {confirm: "削除してもよろしいですか？"},:style=>"color:gray;""text-decoration: none;""float:right;" %></p>
</p>
</div>
<% end %>
</div>

<div class ="kakikomi">
<h3>【<%= @topic.title %>】</h3>
<%= form_for @newpost, :url => post_create_path do |f| %>
  <p><%= f.text_area :body , :size=>"60x5%"%></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>
</div>
